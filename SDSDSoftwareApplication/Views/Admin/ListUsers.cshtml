@model IEnumerable<Resource>

@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        @if (Model.Any())
        {
            @foreach (var user in Model)
            {
                var Photo = "~/Images/" + (user.UserPhoto ?? "sdss.jpg");

                <div class="card col-md-3 m-3" style="width: 18rem;">
                    <img class="card-img-top" height="120" src="@Photo" asp-append-version="true" alt="..." />
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => user.Name)</h5>
                        <p class="card-text">@Html.DisplayFor(modelItem => user.Email)</p>

                    </div>
                    <div class="card-footer">
                        <a asp-action="EditUser" asp-controller="Admin" asp-route-id="@user.Id" class="btn btn-primary"> Edit</a>
                        <a asp-action="DeleteUser" asp-route-Id="@user.Id" class="btn btn-danger"> Delete</a>
                    </div>
                </div>




            }
        }

        else
        {
            <div class=" card">
                <div class="card-header">
                    No User Added
                </div>
                <div class="card-body">
                    <h5 class="card-title">
                        Create below using the button below
                    </h5>
                    <a class="btn btn-danger" asp-controller="Admin" asp-action="CreateRole"> Create Role</a>
                </div>

            </div>
        }
    </div>
</div>
<div>
    <a class="btn btn-primary" asp-action="Index" asp-controller="Admin">Back</a>


    <a class="btn btn-primary" asp-action="AddUser" asp-controller="Admin">Add User</a>



</div>

