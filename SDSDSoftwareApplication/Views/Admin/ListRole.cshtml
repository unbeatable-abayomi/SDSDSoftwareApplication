@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "ListRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="mb-10"> <a class="btn btn-primary" asp-controller="Admin" asp-action="CreateRole"> Create Role</a></h3>


@if (Model.Any())
{
    @foreach (var role in Model)
    {
        <div class=" card mb-3">
            <div class="card-header">
                Role
            </div>
            <div class="card-body">
                <div class="card-title">
                    @Html.DisplayFor(modelItem => role.Name)
                </div>
            </div>
            <div class="card-footer">

                <a asp-action="EditRole" asp-route-id="@role.Id" class="btn btn-primary"> Manage Role</a>
                <a asp-action="DeleteRole" asp-route-id="@role.Id" class="btn btn-danger"> Delete</a>

            </div>
        </div>

    }
}

else
{
    <div class=" card">
        <div class="card-header">
            No Role Added
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Create below using the button below
            </h5>
            <a class="btn btn-danger" asp-controller="Admin" asp-action="CreateRole"> Create Role</a>
        </div>

    </div>
}