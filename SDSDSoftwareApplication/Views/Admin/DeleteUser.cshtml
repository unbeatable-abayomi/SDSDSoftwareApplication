@model SDSDSoftwareApplication.Models.Resource
@{
    ViewData["Title"] = "DeleteUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<h5>Are you sure you want to delete this user " @Html.DisplayFor(model => model.Email) " ?</h5>
<div>

    <hr />
    <dl class="row">

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>

    <form asp-action="DeleteUser" asp-controller="Admin">
        <input type="hidden" asp-route-Id="@Model.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="ListUsers" asp-controller="Admin" class="btn btn-primary">Cancel</a>
    </form>
</div>


